[
  {
    "name": "Alert Box - Error",
    "category": "UI Component",
    "promptCommand": "<div style=\"background:#FED7D7;border-left:4px solid #BA0517;padding:12px 16px;border-radius:4px;margin-bottom:12px;\">\n  <div style=\"font-weight:600;color:#BA0517;margin-bottom:4px;\">{{{title}}}</div>\n  <div style=\"color:#54514C;\">{{{description}}}</div>\n</div>",
    "description": "Use for critical issues requiring immediate attention. Highlights errors, blockers, or failures with red semantic color. Always include specific evidence in the description."
  },
  {
